<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.education.hospitalmanagmentapp.controllers.AppointmentController"
      spacing="10" alignment="CENTER" padding="10">

    <!-- Appointment Form -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Patient ID:"/>
        <TextField fx:id="patientIdField"/>

        <Label text="Doctor ID:"/>
        <TextField fx:id="doctorIdField"/>

        <Label text="Date:"/>
        <DatePicker fx:id="datePicker"/>

        <Label text="Time:"/>
        <ComboBox fx:id="timeComboBox"/>
    </GridPane>

    <!-- Buttons -->
    <Button text="Schedule Appointment" onAction="#handleScheduleAppointment"/>

    <!-- Table for displaying appointments -->
    <TableView fx:id="appointmentTable">
        <!-- Define columns -->
        <columns>
            <TableColumn text="Appointment ID" />
            <TableColumn text="Patient ID" />
            <TableColumn text="Doctor ID" />
            <TableColumn text="Date" />
            <TableColumn text="Time" />
            <TableColumn text="Status" />
        </columns>
    </TableView>
</VBox>

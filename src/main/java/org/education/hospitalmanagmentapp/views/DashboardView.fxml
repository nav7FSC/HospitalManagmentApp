<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Main layout of the dashboard -->
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.education.hospitalmanagmentapp.controllers.DashboardController">

    <!-- Top section: Welcome message -->
    <top>
        <HBox alignment="CENTER" spacing="10" padding="10">
            <Label fx:id="welcomeLabel" text="Welcome to the Hospital Management Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center section: TableView to display patient data -->
    <center>
        <TableView fx:id="patientTableView" prefHeight="400" prefWidth="600" />
    </center>

    <!-- Bottom section: Buttons to navigate to other views -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" padding="10">
            <Button fx:id="viewPatientsButton" text="View Patients" onAction="#handleViewPatients" />
            <Button fx:id="addPatientButton" text="Add New Patient" onAction="#handleAddPatient" />
        </HBox>
    </bottom>

</BorderPane>
